{
  "name": "prereview-demo",
  "version": "2.0.0-alpha0",
  "description": "PREreview2 demo for development, user testing etc.",
  "main": "index.js",
  "scripts": {
    "test": "xo",
    "lint": "xo",
    "format": "xo --fix",
    "indexdb:dev": "ENVIRONMENT=dev node scripts/indexdb.js",
    "initdb:dev": "ENVIRONMENT=dev node scripts/initdb.js",
    "initdb:prod": "ENVIRONMENT=prod node scripts/initdb.js",
    "seeddb:dev": "ENVIRONMENT=dev node --max-old-space-size=10000 scripts/seeddb.js",
    "seeddb:prod": "ENVIRONMENT=prod node scripts/seeddb.js",
    "dev": "NODE_ENV=dev ENVIRONMENT=dev nodemon --watch server --max-old-space-size=3200 index.js",
    "start": "NODE_ENV=prod ENVIRONMENT=prod pm2 start --node-args=\"--max-old-space-size=3200\" --name prereview --log production.log index.js",
    "stop": "pm2 stop prereview",
    "restart": "pm2 restart prereview",
    "makedocs": "cd ../documentation && npm run build && cd - && node scripts/makedocs.js"
  },
